<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <dev.anonymous.ticket_reader.ui.views.FocusBoxView
        android:id="@+id/focusBoxView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <dev.anonymous.ticket_reader.ui.views.OverlayView
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Flash Toggle Button -->
    <ImageButton
        android:id="@+id/btnFlash"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Toggle Flash"
        android:src="@drawable/ic_flash_off"
        app:tint="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <CheckBox
            android:id="@+id/cbSaveCredentials"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:text="حفظ اليوزرنيم والباسوورد الى الحافظة بعد الالتقاط؟"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تم إنشاء التطبيق بواسطة عمر مصطفى أبو شنب"
            android:textColor="@android:color/white" />
    </LinearLayout>

</FrameLayout>
